// prisma/schema.prisma

datasource db {
  provider = "sqlite"  // or "postgresql" / "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id            Int      @id @default(autoincrement())
  name          String
  description   String
  longDescription String
  category      String
  subCategory   String
  tags          String
  price         Float
  stock         Int
  languageKey   String
}

// schema.prisma
model Order {
  id           Int    @id @default(autoincrement())
  customer     String
  product      String
  price        Float
  total        Float
  status       String
  orderDate    DateTime
  deliveryDate DateTime
}




