// prisma/schema.prisma

datasource db {
  provider = "sqlite"  // or "postgresql" / "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id            Int      @id @default(autoincrement())
  name          String
  description   String
  longDescription String
  category      String
  subCategory   String
  tags          String
  price         Float
  stock         Int
  languageKey   String
}

model Order {
  id            String   @id @default(cuid())
  customer      String
  product       String  // Ensure this field is defined
  price         Float
  total         Float
  status        String
  orderDate     DateTime
  deliveryDate  DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}



